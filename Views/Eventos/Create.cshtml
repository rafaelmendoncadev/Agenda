@model Agenda.Models.Evento

@{
    ViewData["Title"] = "Criar Evento";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0" style="background: linear-gradient(135deg, var(--bs-dark) 0%, var(--bs-gray-800) 100%);">
                <div class="card-header text-white border-0" style="background: linear-gradient(135deg, var(--bs-primary) 0%, var(--bs-info) 100%);">
                    <h4 class="mb-0 fw-bold">
                        <i class="bi bi-calendar-plus me-2"></i> Criar Novo Evento
                    </h4>
                </div>
                <div class="card-body text-light">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Titulo" class="form-label fw-semibold"></label>
                            <input asp-for="Titulo" class="form-control form-control-lg" placeholder="Digite o título do evento" />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Descricao" class="form-label fw-semibold"></label>
                            <textarea asp-for="Descricao" class="form-control" rows="4" placeholder="Descrição opcional do evento"></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input class="form-check-input" asp-for="DiaInteiro" id="diaInteiroCheck" />
                                <label class="form-check-label fw-semibold" asp-for="DiaInteiro">
                                    <i class="bi bi-clock me-1"></i> Evento de dia inteiro
                                </label>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DataInicio" class="form-label fw-semibold">
                                        <i class="bi bi-calendar-date me-1"></i> Data de Início
                                    </label>
                                    <input asp-for="DataInicio" class="form-control" type="datetime-local" id="dataInicio" />
                                    <span asp-validation-for="DataInicio" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DataFim" class="form-label fw-semibold">
                                        <i class="bi bi-calendar-check me-1"></i> Data de Fim
                                    </label>
                                    <input asp-for="DataFim" class="form-control" type="datetime-local" id="dataFim" />
                                    <span asp-validation-for="DataFim" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-2">
                                <i class="bi bi-arrow-left me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg shadow">
                                <i class="bi bi-check-lg me-1"></i> Criar Evento
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.getElementById('diaInteiroCheck').addEventListener('change', function() {
            const dataInicio = document.getElementById('dataInicio');
            const dataFim = document.getElementById('dataFim');
            
            if (this.checked) {
                // Converter para apenas data
                const inicioDate = new Date(dataInicio.value).toISOString().split('T')[0];
                const fimDate = new Date(dataFim.value).toISOString().split('T')[0];
                
                dataInicio.type = 'date';
                dataFim.type = 'date';
                dataInicio.value = inicioDate;
                dataFim.value = fimDate;
            } else {
                // Converter para data e hora
                dataInicio.type = 'datetime-local';
                dataFim.type = 'datetime-local';
            }
        });
    </script>
}