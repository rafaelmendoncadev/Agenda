@model Agenda.Models.Evento

@{
    ViewData["Title"] = "Excluir Evento";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Confirmar Exclusão
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>Atenção!</strong> Esta ação não pode ser desfeita. O evento será permanentemente removido.
                    </div>

                    <div class="mb-4">
                        <h5 class="text-danger">Tem certeza que deseja excluir este evento?</h5>
                    </div>

                    <div class="card bg-light">
                        <div class="card-body">
                            <h5 class="card-title text-primary">@Html.DisplayFor(model => model.Titulo)</h5>
                            
                            @if (!string.IsNullOrEmpty(Model.Descricao))
                            {
                                <p class="card-text">@Html.DisplayFor(model => model.Descricao)</p>
                            }
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <small class="text-muted">
                                        <i class="bi bi-calendar3"></i>
                                        <strong>Início:</strong>
                                        @if (Model.DiaInteiro)
                                        {
                                            @Model.DataInicio.ToString("dd/MM/yyyy")
                                        }
                                        else
                                        {
                                            @Model.DataInicio.ToString("dd/MM/yyyy HH:mm")
                                        }
                                    </small>
                                </div>
                                <div class="col-md-6">
                                    <small class="text-muted">
                                        <i class="bi bi-calendar3"></i>
                                        <strong>Fim:</strong>
                                        @if (Model.DiaInteiro)
                                        {
                                            @Model.DataFim.ToString("dd/MM/yyyy")
                                        }
                                        else
                                        {
                                            @Model.DataFim.ToString("dd/MM/yyyy HH:mm")
                                        }
                                    </small>
                                </div>
                            </div>
                            
                            @if (Model.DiaInteiro)
                            {
                                <span class="badge bg-info mt-2">
                                    <i class="bi bi-calendar-day"></i> Dia inteiro
                                </span>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-2">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Tem certeza que deseja excluir este evento?')">
                                <i class="bi bi-trash"></i> Confirmar Exclusão
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>