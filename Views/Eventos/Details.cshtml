@model Agenda.Models.Evento

@{
    ViewData["Title"] = "Detalhes do Evento";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-calendar-event"></i> Detalhes do Evento
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h2 class="text-primary mb-3">@Html.DisplayFor(model => model.Titulo)</h2>
                            
                            @if (!string.IsNullOrEmpty(Model.Descricao))
                            {
                                <div class="mb-4">
                                    <h6 class="text-muted">Descrição:</h6>
                                    <p class="fs-6">@Html.DisplayFor(model => model.Descricao)</p>
                                </div>
                            }

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <h6 class="text-muted">Data de Início:</h6>
                                    <p class="fs-6">
                                        <i class="bi bi-calendar3 text-success"></i>
                                        @if (Model.DiaInteiro)
                                        {
                                            @Model.DataInicio.ToString("dd/MM/yyyy")
                                        }
                                        else
                                        {
                                            @Model.DataInicio.ToString("dd/MM/yyyy HH:mm")
                                        }
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="text-muted">Data de Fim:</h6>
                                    <p class="fs-6">
                                        <i class="bi bi-calendar3 text-danger"></i>
                                        @if (Model.DiaInteiro)
                                        {
                                            @Model.DataFim.ToString("dd/MM/yyyy")
                                        }
                                        else
                                        {
                                            @Model.DataFim.ToString("dd/MM/yyyy HH:mm")
                                        }
                                    </p>
                                </div>
                            </div>

                            <div class="mb-3">
                                <h6 class="text-muted">Tipo:</h6>
                                @if (Model.DiaInteiro)
                                {
                                    <span class="badge bg-info fs-6">
                                        <i class="bi bi-calendar-day"></i> Evento de dia inteiro
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-primary fs-6">
                                        <i class="bi bi-clock"></i> Evento com horário específico
                                    </span>
                                }
                            </div>

                            <div class="mb-3">
                                <h6 class="text-muted">Status:</h6>
                                @{
                                    var agora = DateTime.Now;
                                    var status = "";
                                    var badgeClass = "";
                                    var icon = "";
                                    
                                    if (Model.DataFim < agora)
                                    {
                                        status = "Finalizado";
                                        badgeClass = "bg-secondary";
                                        icon = "bi-check-circle";
                                    }
                                    else if (Model.DataInicio <= agora && agora <= Model.DataFim)
                                    {
                                        status = "Em andamento";
                                        badgeClass = "bg-success";
                                        icon = "bi-play-circle";
                                    }
                                    else
                                    {
                                        status = "Agendado";
                                        badgeClass = "bg-warning text-dark";
                                        icon = "bi-clock";
                                    }
                                }
                                <span class="badge @badgeClass fs-6">
                                    <i class="bi @icon"></i> @status
                                </span>
                            </div>

                            <div class="mb-4">
                                <h6 class="text-muted">Criado em:</h6>
                                <small class="text-muted">
                                    <i class="bi bi-calendar-plus"></i>
                                    @Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary me-2">
                            <i class="bi bi-arrow-left"></i> Voltar à Lista
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-2">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Excluir
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>