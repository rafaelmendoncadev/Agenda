@model Agenda.Models.Evento

@{
    ViewData["Title"] = "Detalhes do Evento";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0" style="background: linear-gradient(135deg, var(--bs-dark) 0%, var(--bs-gray-800) 100%);">
                <div class="card-header text-white border-0" style="background: linear-gradient(135deg, var(--bs-info) 0%, var(--bs-cyan) 100%);">
                    <h4 class="mb-0 fw-bold">
                        <i class="bi bi-calendar-event me-2"></i> Detalhes do Evento
                    </h4>
                </div>
                <div class="card-body text-light">
                    <div class="row">
                        <div class="col-md-12">
                            <h2 class="text-primary mb-4 fw-bold display-6">@Html.DisplayFor(model => model.Titulo)</h2>
                            
                            @if (!string.IsNullOrEmpty(Model.Descricao))
                            {
                                <div class="mb-4 p-3 rounded" style="background: rgba(var(--bs-primary-rgb), 0.1); border-left: 4px solid var(--bs-primary);">
                                    <h6 class="text-primary fw-semibold mb-2">
                                        <i class="bi bi-card-text me-1"></i> Descrição:
                                    </h6>
                                    <p class="fs-6 mb-0 text-light">@Html.DisplayFor(model => model.Descricao)</p>
                                </div>
                            }

                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <div class="p-3 rounded" style="background: rgba(var(--bs-success-rgb), 0.1); border-left: 4px solid var(--bs-success);">
                                        <h6 class="text-success fw-semibold mb-2">
                                            <i class="bi bi-calendar-date me-1"></i> Data de Início:
                                        </h6>
                                        <p class="fs-5 mb-0 text-light fw-semibold">
                                            @if (Model.DiaInteiro)
                                            {
                                                @Model.DataInicio.ToString("dd/MM/yyyy")
                                            }
                                            else
                                            {
                                                @Model.DataInicio.ToString("dd/MM/yyyy HH:mm")
                                            }
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="p-3 rounded" style="background: rgba(var(--bs-danger-rgb), 0.1); border-left: 4px solid var(--bs-danger);">
                                        <h6 class="text-danger fw-semibold mb-2">
                                            <i class="bi bi-calendar-check me-1"></i> Data de Fim:
                                        </h6>
                                        <p class="fs-5 mb-0 text-light fw-semibold">
                                            @if (Model.DiaInteiro)
                                            {
                                                @Model.DataFim.ToString("dd/MM/yyyy")
                                            }
                                            else
                                            {
                                                @Model.DataFim.ToString("dd/MM/yyyy HH:mm")
                                            }
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-4">
                                <h6 class="text-info fw-semibold mb-2">
                                    <i class="bi bi-tag me-1"></i> Tipo:
                                </h6>
                                @if (Model.DiaInteiro)
                                {
                                    <span class="badge bg-info fs-5 px-3 py-2">
                                        <i class="bi bi-calendar-day me-1"></i> Evento de dia inteiro
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-primary fs-5 px-3 py-2">
                                        <i class="bi bi-clock me-1"></i> Evento com horário específico
                                    </span>
                                }
                            </div>

                            <div class="mb-4">
                                <h6 class="text-warning fw-semibold mb-2">
                                    <i class="bi bi-activity me-1"></i> Status:
                                </h6>
                                @{
                                    var agora = DateTime.Now;
                                    var status = "";
                                    var badgeClass = "";
                                    var icon = "";
                                    
                                    if (Model.DataFim < agora)
                                    {
                                        status = "Finalizado";
                                        badgeClass = "bg-secondary";
                                        icon = "bi-check-circle";
                                    }
                                    else if (Model.DataInicio <= agora && agora <= Model.DataFim)
                                    {
                                        status = "Em andamento";
                                        badgeClass = "bg-success";
                                        icon = "bi-play-circle";
                                    }
                                    else
                                    {
                                        status = "Agendado";
                                        badgeClass = "bg-warning";
                                        icon = "bi-clock";
                                    }
                                }
                                <span class="badge @badgeClass fs-5 px-3 py-2">
                                    <i class="bi @icon me-1"></i> @status
                                </span>
                            </div>

                            <div class="mb-4 p-3 rounded" style="background: rgba(var(--bs-secondary-rgb), 0.1); border-left: 4px solid var(--bs-secondary);">
                                <h6 class="text-secondary fw-semibold mb-2">
                                    <i class="bi bi-calendar-plus me-1"></i> Criado em:
                                </h6>
                                <p class="text-light opacity-75 mb-0">
                                    @Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 pt-0">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-2">
                            <i class="bi bi-arrow-left me-1"></i> Voltar à Lista
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning btn-lg me-2 fw-bold">
                            <i class="bi bi-pencil me-1"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger btn-lg">
                            <i class="bi bi-trash me-1"></i> Excluir
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>