@model IEnumerable<Agenda.Models.Evento>

@{
    ViewData["Title"] = "Meus Eventos";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 fw-bold">
            <i class="bi bi-calendar-event text-primary me-2"></i> 
            <span class="bg-gradient text-primary">Meus Eventos</span>
        </h1>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow">
            <i class="bi bi-calendar-plus me-2"></i> Novo Evento
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card text-center shadow-lg border-0" style="background: linear-gradient(135deg, var(--bs-dark) 0%, var(--bs-secondary) 100%);">
                    <div class="card-body py-5">
                        <div class="mb-4">
                            <i class="bi bi-calendar-x display-1 text-primary mb-3 opacity-75"></i>
                        </div>
                        <h4 class="card-title text-light fw-bold mb-3">Nenhum evento encontrado</h4>
                        <p class="card-text text-light opacity-75 mb-4 fs-5">
                            Você ainda não possui eventos cadastrados. Comece criando seu primeiro evento e organize sua agenda!
                        </p>
                        <a asp-action="Create" class="btn btn-primary btn-lg shadow px-4">
                            <i class="bi bi-calendar-plus me-2"></i> Criar Primeiro Evento
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow border-0" style="background: linear-gradient(135deg, var(--bs-dark) 0%, var(--bs-gray-800) 100%); transition: transform 0.2s ease;" onmouseover="this.style.transform='translateY(-5px)'" onmouseout="this.style.transform='translateY(0)'">
                        <div class="card-header text-white border-0" style="background: linear-gradient(135deg, var(--bs-primary) 0%, var(--bs-info) 100%);">
                            <h5 class="card-title mb-0 fw-bold">
                                <i class="bi bi-calendar-event me-2"></i>
                                @Html.DisplayFor(modelItem => item.Titulo)
                            </h5>
                        </div>
                        <div class="card-body text-light">
                            @if (!string.IsNullOrEmpty(item.Descricao))
                            {
                                <p class="card-text">
                                    @Html.DisplayFor(modelItem => item.Descricao)
                                </p>
                            }
                            
                            <div class="mb-3">
                                <div class="text-light opacity-75">
                                    <i class="bi bi-calendar3 me-1"></i>
                                    @if (item.DiaInteiro)
                                    {
                                        <span>@item.DataInicio.ToString("dd/MM/yyyy")</span>
                                        @if (item.DataInicio.Date != item.DataFim.Date)
                                        {
                                            <span> - @item.DataFim.ToString("dd/MM/yyyy")</span>
                                        }
                                        <span class="badge bg-info ms-2">Dia inteiro</span>
                                    }
                                    else
                                    {
                                        <span>@item.DataInicio.ToString("dd/MM/yyyy HH:mm")</span>
                                        <br>
                                        <i class="bi bi-arrow-right mx-1"></i>
                                        <span>@item.DataFim.ToString("dd/MM/yyyy HH:mm")</span>
                                    }
                                </div>
                            </div>

                            @{
                                var agora = DateTime.Now;
                                var status = "";
                                var badgeClass = "";
                                
                                if (item.DataFim < agora)
                                {
                                    status = "Finalizado";
                                    badgeClass = "bg-secondary";
                                }
                                else if (item.DataInicio <= agora && agora <= item.DataFim)
                                {
                                    status = "Em andamento";
                                    badgeClass = "bg-success";
                                }
                                else
                                {
                                    status = "Agendado";
                                    badgeClass = "bg-warning";
                                }
                            }
                            
                            <span class="badge @badgeClass fs-6 px-3 py-2">@status</span>
                        </div>
                        <div class="card-footer bg-transparent border-0 pt-0">
                            <div class="btn-group w-100" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                                    <i class="bi bi-eye me-1"></i> Ver
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                    <i class="bi bi-pencil me-1"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                    <i class="bi bi-trash me-1"></i> Excluir
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>