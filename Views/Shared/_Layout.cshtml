<!DOCTYPE html>
<html lang="pt-BR" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agenda</title>
    <link id="bootstrap-theme" rel="stylesheet" href="~/bootstrap.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Agenda.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-calendar-check text-success"></i> Agenda
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> Home
                            </a>
                        </li>
                        @if (User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Dashboard">
                                    <i class="bi bi-speedometer2"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Eventos" asp-action="Index">
                                    <i class="bi bi-calendar-event"></i> Meus Eventos
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-check"></i> Privacidade
                            </a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center">
                        <button id="theme-toggle" class="btn btn-outline-light btn-sm me-3" type="button" title="Alternar tema">
                            <i id="theme-icon" class="bi bi-sun"></i>
                        </button>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted bg-secondary">
        <div class="container py-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <span>&copy; 2025 - Agenda - Sistema de Gerenciamento de Eventos</span>
                </div>
                <div class="col-md-6 text-end">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none">
                        <i class="bi bi-shield-check"></i> Política de Privacidade
                    </a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Theme Toggle Functionality
        document.addEventListener('DOMContentLoaded', function() {
            const themeToggle = document.getElementById('theme-toggle');
            const themeIcon = document.getElementById('theme-icon');
            const htmlElement = document.documentElement;
            const bootstrapTheme = document.getElementById('bootstrap-theme');
            
            // Caminhos dos temas
            const darkThemePath = '/bootstrap-dark.css';
            const lightThemePath = '/bootstrap.css';
            
            // Recuperar tema salvo ou usar light como padrão
            const savedTheme = localStorage.getItem('theme') || 'light';
            setTheme(savedTheme);
            
            themeToggle.addEventListener('click', function() {
                const currentTheme = htmlElement.getAttribute('data-bs-theme');
                const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                setTheme(newTheme);
                localStorage.setItem('theme', newTheme);
            });
            
            function setTheme(theme) {
                if (theme === 'dark') {
                    // Tema Darkly
                    bootstrapTheme.href = darkThemePath;
                    htmlElement.setAttribute('data-bs-theme', 'dark');
                    themeIcon.className = 'bi bi-sun';
                    themeToggle.title = 'Alternar para tema claro';
                } else {
                    // Tema Quartz
                    bootstrapTheme.href = lightThemePath;
                    htmlElement.setAttribute('data-bs-theme', 'light');
                    themeIcon.className = 'bi bi-moon';
                    themeToggle.title = 'Alternar para tema escuro';
                }
            }
        });
    </script>
 
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
